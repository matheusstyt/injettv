<!DOCTYPE html>
<html lang=en>
    <head>
        <title>InjetTV - Paradas</title>
        <meta charset=UTF-8>
        <meta name=viewport content="width=device-width, initial-scale=1">
        <link rel=stylesheet href=/assets/css/materialize.min.css />
        <link rel=stylesheet href=/styles/css/paradas.css />
        <style>
        img {
            position: absolute;
            right: 0;
            top: 0;
            margin: 25px 25px 0 0;
        }
    </style>
        <script>
            let secondsTransition = '<%=secondsTransition%>';
            let slideTransition = '<%=slideTransition%>';
            let nextPage = '<%=nextPage%>';
        </script>
    </head>
    <body >
        <img src="<%=logo%>" alt=logo width=150 height=150>
        <main>
            <div class=row>
                <div class="col s1">
                    <button class="light-blue darken-2 right btn waves-effect waves-light"id=clear>
                        <i class="material-icons">clear</i>                                
                        <i class="material-icons">home</i>
                    </button>
                </div>
                <h1 class=center-align>Paradas | Alertas</h1>
                <div class="container">
                    <table>
                        <tr>
                            <th>MÁQUINA</th>
                            <th>DESCRIÇÃO</th>
                            <th>DURAÇÃO (HH:MM:SS)</th>
                        </tr>
                        <% pts.forEach((pt) => { %>
                        <tr class="teste" id="circle1">
                            <td style="color: <%= pt.cor %>"><b><%= pt.cdPt %></b></td>
                            <td style="color: <%= pt.cor %>"><b><%= pt.descricao %></b></td>
                            <td style="color: <%= pt.cor %>"><b><%= pt.tempo %></b></td>
                        </tr>
                        <% }) %>
                    </table>

                </div>
            </div>
        </main>
        <h3 id="updateParadas">Última atualização: <%=ultimaAtualizacao%></h3>
        <script src=/assets/jquery.min.js></script>
        <script src=/scripts/carousel.js></script>
        <script src=/scripts/clear.js></script>
        <script src=/scripts/theme.js></script>

    </body>
</html>